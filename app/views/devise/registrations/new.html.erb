<div class='account-page' id='account-page'>
  <div class='account-page__inner clearfix'>
    <div class='account-page__inner--left account-page__header'>
      <h2>Create Account</h2>
      <h5>新規アカウントの作成</h5>
    </div>
    <div class='account-page__inner--right user-form'>
      <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), local: true do |f|%>
        <%= devise_error_messages!%>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :name%>
            <i>名前</i>
          </div>
          <div class='field-input'>
            <%= f.text_field :name, autofocus: true%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :email%>
            <i>メールアドレス</i>
          </div>
          <div class='field-input'>
            <%= f.email_field :email%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :password%>
            <i>パスワード</i>
            <i>(英数字8文字以上)</i>
          </div>
          <div class='field-input'>
            <%= f.password_field :password, autocomplete: "off"%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :password %>
            <i>パスワード</i>
            <i>(確認用)</i>
          </div>
          <div class='field-input'>
            <%= f.password_field :password_confirmation, autocomplete: "off"%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :gender %>
            <i>性別</i>
          </div>
          <%= f.radio_button :gender, '1' %>
          <%= f.label :gender, '男性', value: 1 %>
          <%= f.radio_button :gender, '2' %>
          <%= f.label :gender, '女性', value: 2 %>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :age %>
            <i>年齢</i>
          </div>
          <%= f.collection_select(:age_id, Age.all, :id, :name, {}, {class:"genre-select"}) %>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :position %>
            <i>肩書き</i>
          </div>
          <%= f.collection_select(:position_id, Position.all, :id, :name, {}, {class:"genre-select"}) %>
        </div>
        <div class='actions'>
          <%= f.submit "Create Account", class: 'btn'%>
        </div>
      </div>
    <% end %>
  </div>
</div>
